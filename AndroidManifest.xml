<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="antonj.cubic"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                 android:name=".CubicApplication">
        <activity android:name=".app.MainMenuActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".app.CubicActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="nosensor"/>

        <activity android:name="antonj.samples.buttons.ButtonSampleActivity"
                  android:label="@string/samples_title"
                  android:screenOrientation="nosensor"/>

        <activity android:name=".app.StartGameActivity"/>
        <activity android:name=".app.ContinueGameActivity"/>
    </application>

    <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest> 
